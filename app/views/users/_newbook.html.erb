    <h2>New book</h2>
    <%= form_with model:new_book, local:true do |f| %>
      <div class="form-group">
        <%= f.label :Title %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :Opinion %>
        <%= f.text_field :body %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-success" %>
      </div>
    <% end %>