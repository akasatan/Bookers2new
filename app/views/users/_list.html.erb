
<div class="container">
  <div class="row">
    <div class="col"><!--追加記述あり-->
      <h2>User info</h2>
      <%= attachment_image_tag user, :my_image, :fill, 100, 100, fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th>%= user.name %エラー起きてます</th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>%= user.setsumei %エラー起きてます</th>
          </tr>
        </tbody>
      </table>
      %= link_to 'edit', edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %
    </div>
  </div>
</div>