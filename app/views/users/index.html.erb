<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render 'users/list', user: @user %>
     <%= render 'users/newbook', new_book: @new_book %>
    </div><!--col-md-3-->
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40' %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
                  <!--ｲﾝｽﾀﾝｽ変数にしないのはここのクリックでユーザIDが出せるから-->
            </tr>
            <% end %>
          </tbody>
        </table>
      </div><!--col-md-8-->
  </div><!--row-->
</div><!--container-->
<%= render 'users/copyright' %>