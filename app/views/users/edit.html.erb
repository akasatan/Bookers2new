<main><p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
         <%= form_with model: @user, local:true do |f| %>
           <div class="form-group">
             <%= f.label :name, 'Name' %>
             <%= f.text_field :name %>
           </div>
           <div class="form-group">
             <%= f.label :my_image_id, 'Image' %>
             <%= f.attachment_field :my_image %>
           </div>
           <div class="form-group">
             <%= f.label :setsumei, 'Introduction' %>
             <%= f.text_field :setsumei %>
          </div>
          <div class="form-group">
             <%= f.submit "Update User", class: "btn btn-secondary" %>
　　     <% end %>
</main>